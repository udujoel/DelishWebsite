
@{
    ViewBag.Title = "Menu";
}
@using System.Web.UI.WebControls
@using DelishWebsite

@foreach (var dish in ViewBag.Menu)
{
    @dish.id
    @dish.name;
    @dish.price;
    @dish.img
    @dish.instock
}


<!-- banner -->
<div class="main-banner-2">

</div>
<!-- //banner -->
<!-- page details -->
<div class="breadcrumb-agile bg-light py-2">
    <ol class="breadcrumb bg-light m-0">
        <li class="breadcrumb-item">
            <a href=@Url.Action("Index", "Home")>Home</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Menu</li>
    </ol>
</div>
<!-- //page details -->
<!-- menu -->
<section class="portfolio py-5">
    <div class="container py-xl-5 py-lg-3">
        <div class="title-section text-center mb-md-5 mb-4">
            <h3 class="w3ls-title mb-3">Delish <span>Menu</span></h3>
            <p class="titile-para-text mx-auto">
                Make your pick of a tasty Delish-ious meal
                and we'll have it delivered at your door in no time!
            </p>
        </div>


        <div class="row mt-md-5">
            @foreach (var dish in ViewBag.Menu)
            {

                <div class="col-md-4 mt-md-0 mt-4">
                    <div class="gallery-demo">
                        <a href="#@dish.id">
                            <img src=@Url.Content($"~/Content/images/{@dish.img}") alt=" " class="img-fluid" />
                            <h4 class="p-mask">@dish.name <span>@String.Format("{0:C}", @dish.price) </span></h4>
                        </a>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

@foreach (var dish in ViewBag.Menu)
{
    <!-- gallery model-->
    <!-- gallery popup 1 -->
    <div id="@dish.id" class="pop-overlay">
        <div class="popup">
            <img class="img-fluid" src=@Url.Content($"~/Content/images/{@dish.img}") alt="">
            <h4 class="p-mask">@dish.name<span>@String.Format("{0:C}", @dish.price)</span></h4>
            <a href=@Url.Action("Index", "Home") class="button-w3ls active mt-3">
                Add to Cart
                <span class="fa fa-caret-right ml-1" aria-hidden="true"></span>
            </a>
            <a class="close" href="#gallery">X</a>
        </div>
    </div>
    <!-- //gallery popup 1 -->

}
<!-- //menu -->
